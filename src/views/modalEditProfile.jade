.modal.fade#modal
  .modal-dialog
    .modal-content
      .modal-header
        button.close(data-dismiss="modal")
          span &times;
        h4 Edit Profile
      .modal-body
        form(name="profileForm" novalidate)
          .form-group(ng-class="{'has-success': profileForm.n.$dirty && profile.profile.name.length > 1, 'has-error': profileForm.n.$dirty && !profile.profile.name}")
            label.control-label Name
            input.form-control(name="n", type="text", placeholder="Arizona", ng-model="profile.profile.name", required)
          .form-group(ng-class="{'has-success': personForm.p.$dirty && profile.profile.phone, 'has-error': profileForm.p.$dirty && !profile.profile.phone}")
            label.control-label Phone
            input.form-control(name="p", type="text", placeholder="555-555-5555", ng-model="profile.profile.phone", required)
          .form-group(ng-class="{'has-success': personForm.e.$dirty && profile.profile.email, 'has-error': profileForm.e.$dirty && !profile.profile.email}")
            label.control-label Email
            input.form-control(name="e", type="text", placeholder="name@zeta.com", ng-model="profile.profile.email", required)
          .form-group(ng-class="{'has-success': personForm.a.$dirty && profile.profile.address, 'has-error': profileForm.a.$dirty && !profile.profile.address}")
            label.control-label Address
            input.form-control(name="a", type="text", placeholder="1920 Zeta Way", ng-model="profile.profile.address", required)
          .form-group(ng-class="{'has-success': profileForm.o.$dirty && profile.profile.occup, 'has-error': profileForm.o.$dirty && !profile.profile.occup}")
            label.control-label Occupation
            input.form-control(name="o", type="text", placeholder="Web Developer", ng-model="profile.profile.occup", required)
          .form-group(ng-class="{'has-success': profileForm.e.$dirty && profile.profile.info, 'has-error': profileForm.e.$dirty && !profile.profile.info}")
            label.control-label Additional Info
            input.form-control(name="e", type="text", placeholder="Hometown, hobbies and interests, etc.", cols="40", rows="5", ng-model="profile.profile.info", required)
          .form-group(ng-class="{'has-success': profileForm.t.$dirty && profileForm.i.$valid , 'has-error': profileForm.t.$dirty && profileForm.i.$invalid }")
            label.control-label Profile Photo
            input.form-control(name="i", type="url", placeholder="http://google.com/img.jpg", ng-model="profile.profile.photo", required)
            //- .upload(ng-controller="UploadCtrl as upload")
            //-   form(ng-submit="upload.submit()")
            //-     input(ngf-select, type="file", ng-model="upload.files", accept="image/*", ngf-change="upload.fileSelected()")
            //-     input(type="submit", value="Upload")
      .modal-footer
        button.btn.btn-danger(data-dismiss="modal") Cancel
        button.btn.btn-primary(ng-click="profileForm.$valid && ppl.saveProfile()", ng-disabled="profileForm.$invalid") Save

